mixin sForm()
	// start sForm
	+b.SECTION.sForm.section#sForm&attributes(attributes)
		.container
			+form-wrap
				h2 Хотите получать новости?
				+e.row.row
					+e.col.col-md-5
						p Оставьте ваш	электронный адрес и будьте в курсе последних новостей
					+e.col.col-md-7
						.btns-wrapper
							+input("Адрес электронной почты",'email')
								img(src="img/email.svg", alt="").input-icon
							+e.btn.btn.btn-primary(type="submit") Отправить заявку
						+policy
	// end sForm

mixin sForm2()
	// start sForm
	+b.SECTION.sForm--consult.section#sForm&attributes(attributes)
		.container
			+form-wrap
				.text-center
					.d-none.d-lg-block: h2 Закажите бесплатную консультацию специалиста по выбору оптимального оборудования
					.d-lg-none: h2 Бесплатная консультация
					.d-lg-none: p Закажите бесплатную консультацию специалиста по выбору оптимального оборудования
				.form-wrapper
					+input("*Ваше имя ",'text')
						img(src="img/user.svg", alt="").input-icon
					+input("*Номер телефона ",'tel')
						img(src="img/phone-2.svg", alt="").input-icon
					+input("E-mail ",'email')
						img(src="img/email.svg", alt="").input-icon
					+e.btn.btn.btn-primary(type="submit") Отправить заявку
				.small.fw-500 Нажимая на кнопку “Отправить заявку” вы соглашаетесь с обработкой персональных данных
	// end sForm

mixin sFormSmall()
	// start sForm
	.sForm--small
		+form-wrap
			.text-center
				h2 Подпишитесь на наши новости
				p Оставьте ваш  электронный адрес и будьте в курсе последних новостей
				+input("E-mail ",'email')
					img(src="img/email.svg", alt="").input-icon
				.small.fw-500 Нажимая на кнопку “Отправить заявку” вы соглашаетесь с обработкой персональных данных
				+e.btn.btn.btn-primary(type="submit") Подписаться
	// end sForm