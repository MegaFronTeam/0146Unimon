mixin sProperties(data)
	// start sProperties
	+b.SECTION.sProperties.section#sProperties&attributes(attributes)
		.container
			+b.section-title.text-center
				.h1 Профессиональный функционал для бизнес-задач
			+e.row.row
				+e.col.col-12.col-xl-7.order-xl-2
					+e.img-wrap: +img(src="img/properties-img.png", alt="").m-left
				+e.col.col-12.col-xl-5
					+ddGroup
